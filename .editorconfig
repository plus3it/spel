# see http://editorconfig.org
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 1

[Makefile.*]
indent_style = tab
indent_size = 1

[*.go]
indent_style = tab
indent_size = 1

[LICENSE]
indent_size = none

[.bumpversion.cfg]
trim_trailing_whitespace = false
indent_style = tab
indent_size = 1
