                "echo Killing processes locking /oldroot",
                "fuser -vmk /oldroot"
            ],
            "only": [
                "minimal-centos-7-hvm",
                "minimal-centos-7-hvm-xfs",
                "minimal-rhel-7-hvm",
                "minimal-rhel-7-hvm-xfs",
